<h1>{{title}}</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.item.title }}</strong><br/>
                    <em>{{{this.item.description}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{ this.price }} CHF
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: {{ totalPrice }} CHF</strong>
    </div>
    <hr>
    <div class="text-right">
        <form action="/checkout"> 
            <input type="submit" class="btn btn-success pull-right" 
                    role="button" value="Checkout"
                    onclick="return confirm('Are you sure to checkout this order?');">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        </form>
    </div>
{{ else }}
    Your shopping cart is empty.
{{/if}}
