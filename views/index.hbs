<h1>{{title}}</h1>
<p>Welcome to the {{title}}</p>

{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
              <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} CHF</div>
              <br>
              <div>
                <div align="right">
                  <form action="/adds"> <input type="hidden" id="productId" name="productId" value="{{ this.id }}">
                    counts: <input type="number" min="1" value="1" name="counts">
                    <input type="submit" class="btn btn-default pull-right" role="button" value="Add item(s)"><i class="fa fa-shopping-cart" aria-hidden="true"></i></form>
                  </form>
                </div>
              </div>
              <br>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}


